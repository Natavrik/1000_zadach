#include <stdio.h>
#include <math.h>

int main()
{
    int a, b, c;
    int V, S;
    
    printf("Введите размеронсть прямоугольного параллелепипеда: а, b , c \n");
    scanf("%d %d %d", &a, &b, &c);
    
    V = a*b*c;
    S = 2*(a*b+b*c+a*c);
    
    printf("объём = %d\n", V);
    printf("площадь поверхности = %d\n", S);
  
    return 0;
}
